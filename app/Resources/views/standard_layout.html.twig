{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% trans_default_domain 'SonataAdminBundle' %}

{% block side_bar_after_nav_content %}
    <a href="/" rel="noreferrer">{{ 'label.side_bar_after_nav_content'|trans() }}</a>
{% endblock %}

{% block logo %}
    {% spaceless %}
        <a class="logo" href="{{ path('homepage') }}">
            {% if 'single_image' == sonata_admin.adminPool.getOption('title_mode') or 'both' == sonata_admin.adminPool.getOption('title_mode') %}
                <img src="{{ asset('bundles/omerteam/images/logo.png') }}" alt="{{ 'title'|trans() }}">
            {% endif %}
            {% if 'single_text' == sonata_admin.adminPool.getOption('title_mode') or 'both' == sonata_admin.adminPool.getOption('title_mode') %}
                <span>{{ 'title'|trans() }}</span>
            {% endif %}
        </a>
    {% endspaceless %}
{% endblock %}

{% block sonata_top_nav_menu %}
    <div class="navbar-custom-menu">
        <form action="/logout" style="margin: 0px 15px;">
            <input class="btn btn-block btn-danger" style="margin-top: 11%; " type="submit" id="_submit" name="_submit"
                   value="{{ 'label.logout'|trans() }}"/>
        </form>
    </div>
{% endblock %}