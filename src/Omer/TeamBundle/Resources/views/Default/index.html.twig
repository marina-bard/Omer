{% extends 'base.html.twig' %}

{% trans_default_domain 'OmerTeamBundle' %}

{% block header %}
{% endblock %}

{% block content %}
    <video playsinline autoplay muted loop poster="{{ asset('bundles/omerteam/images/main_bg.png') }}" id="bgvid">
        <source src="{{  asset('bundles/omerteam/videos/OOTM.mp4') }}" type="video/mp4">
    </video>

    <div class="container">
        <div class="row main-logo-lead wow fadeInDown" data-wow-delay="0.5s">
            <div class="col-md-12">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <a href="">
                        <img src="{{ asset('bundles/omerteam/images/omer.png') }}" alt="Omer" class="main-logo">
                        <label for="" class="main-lead">{{ 'title'|trans() }}</label>
                    </a>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="main-form wow fadeInUp" data-wow-delay="0.5s">
                        <h1 class="login-text">{{ 'label.form.title'|trans() }}</h1>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="{{ 'label.form.login'|trans() }}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="{{ 'label.form.password'|trans() }}">
                        </div>

                        <div class="form-group">
                            <input type="text" class="btn btn-success login-btn wow pulse" data-wow-delay="1.25s" value="{{ 'label.actions.login'|trans() }}">
                        </div>

                        <div class="form-group">
                            <a href="{{ path('team_new') }}">
                                <input type="text" class="btn btn-primary register-team-btn wow pulse" data-wow-delay="1.5s" value="{{ 'label.registration'|trans() }}">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
{% endblock %}

