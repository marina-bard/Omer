{% extends 'base.html.twig' %}

{% trans_default_domain 'OmerTeamBundle' %}

{% block content %}
    <video playsinline autoplay muted loop poster="{{ asset('bundles/omerteam/images/main_bg.png') }}" id="bgvid">
        <source src="{{  asset('bundles/omerteam/videos/OOTM.mp4') }}" type="video/mp4">
    </video>

    <div class="container">
        <div class="row main-logo-lead wow fadeInDown" data-wow-delay="0.5s">
            <div class="col-md-12">
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    <img src="{{ asset('bundles/omerteam/images/omer.png') }}" alt="Omer" class="main-logo">
                </div>
                <div class="col-md-6">
                    <a href="">
                        <label for="" class="main-lead">{{ 'title'|trans() }}</label>
                        <label for="" class="main-sub-lead">{{ 'title_en'|trans() }}</label>
                    </a>
                </div>
                <div class="col-md-2">
                    <img src="{{ asset('bundles/omerteam/images/omer.png') }}" alt="Omer" class="main-logo pull-right">
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>

        {% block fos_user_content %}
            <div class="col-md-12">
                <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <div class="row">
                            {% if (not is_granted('ROLE_ADMIN')) %}
                                {{ render(controller('OmerUserBundle:Security:login')) }}
                            {% else %}
                                <div class="main-form logged-in wow fadeInUp" data-wow-delay="0.5s">
                                    <div class="form-group">
                                        <a href="{{ path('sonata_admin_dashboard') }}">
                                            <input class="btn btn-success login-btn wow pulse" type="button"
                                                   data-wow-delay="1.25s" value="{{ 'label.actions.login_to_profile'|trans() }}">
                                        </a>
                                    </div>
                                    <div class="form-group">
                                        <a href="{{ path('team_new') }}">
                                            <input type="button" class="btn btn-primary register-team-btn wow pulse"
                                                   data-wow-delay="1.5s" value="{{ 'label.registration'|trans() }}">
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        {% endblock fos_user_content %}
    </div>
{% endblock %}

