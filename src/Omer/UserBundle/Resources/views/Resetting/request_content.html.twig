{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="row">
                    <div class="main-form wow fadeInUp" data-wow-delay="0.5s">
                        <form action="{{ path("fos_user_resetting_send_email") }}" method="post" class="no-bg">
                            <h1 class="login-text">{{ 'resetting.email.subject'|trans }}</h1>

                            <div class="form-group">
                                <input type="text" class="form-control" name="_username"
                                       placeholder="{{ 'security.login.username'|trans() }}">
                            </div>

                            <div class="form-group">
                                <input class="btn btn-success login-btn wow pulse" type="submit" id="_submit" name="_submit"
                                       data-wow-delay="1.25s" value="{{  'resetting.request.submit'|trans }}">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>