{% extends 'OmerTeamBundle:team:layout_registration.html.twig' %}

{% trans_default_domain 'OmerUserBundle' %}

{% block registration %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="main-form logged-in wow fadeInUp" data-wow-delay="0.1s">
                            <p class="login-text">{{ 'email.user.request_send'|trans({'%email%': email, '%role%': role})|nl2br }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
